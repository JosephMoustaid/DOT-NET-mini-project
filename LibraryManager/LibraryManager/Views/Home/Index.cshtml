@{
    ViewData["Title"] = "Home Page";
}

<!-- Header Section -->
<header class="bg-primary text-white py-5">
    <div class="container text-center">
        <h1 class="display-4 mb-3 animated fadeInUp">Welcome to the Library</h1>
        <p class="lead animated fadeInUp">Explore our vast collection of books and resources. Manage your library efficiently with our platform.</p>
        <a href="@Url.Action("Index", "Books")" class="btn btn-light btn-lg animated fadeInUp delay-1s">Browse Books</a>
    </div>
</header>

<!-- About Section -->
<section class="bg-light py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2 class="mb-4">About Our library</h2>
                <p class="text-muted">
                    Our library is your gateway to endless learning and exploration. With thousands of books, journals, and multimedia resources, we aim to cater to the needs of readers, researchers, and knowledge seekers of all ages.
                </p>
                <ul class="list-unstyled">
                    <li><i class="fas fa-check-circle text-success"></i> Over 50,000 books across genres.</li>
                    <li><i class="fas fa-check-circle text-success"></i> State-of-the-art digital resources.</li>
                    <li><i class="fas fa-check-circle text-success"></i> Expert librarians to assist you.</li>
                </ul>
                <a href="@Url.Action("About", "Home")" class="btn btn-primary mt-3">Learn More</a>
            </div>
            <div class="col-md-6">
                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/a3/SanDiegoCityCollegeLearningResource_-_bookshelf.jpg/1200px-SanDiegoCityCollegeLearningResource_-_bookshelf.jpg" alt="Library Interior" class="img-fluid rounded shadow-sm" />
            </div>
        </div>
    </div>
</section>

<!-- Services Section -->
<section class="container py-5">
    <div class="text-center mb-4">
        <h2>Our Services</h2>
        <p class="text-muted">We provide a wide range of services to enhance your library experience.</p>
    </div>

    <!-- Main Service Categories -->
    <div class="row text-center">
        <!-- Book Lending -->
        <div class="col-md-4 mb-4">
            <i class="fas fa-book-reader fa-3x text-primary mb-3"></i>
            <h5>Book Lending</h5>
            <p>Borrow books easily with our user-friendly system. We offer flexible borrowing periods for all members.</p>
            <ul class="list-unstyled text-muted">
                <li><i class="fas fa-check text-success"></i> Flexible borrowing options</li>
                <li><i class="fas fa-check text-success"></i> Automatic renewal reminders</li>
                <li><i class="fas fa-check text-success"></i> Inter-library loans available</li>
            </ul>
        </div>

        <!-- Research Assistance -->
        <div class="col-md-4 mb-4">
            <i class="fas fa-search fa-3x text-primary mb-3"></i>
            <h5>Research Assistance</h5>
            <p>Get expert help with your academic and professional research. Our librarians are ready to assist you.</p>
            <ul class="list-unstyled text-muted">
                <li><i class="fas fa-check text-success"></i> Personalized research consultations</li>
                <li><i class="fas fa-check text-success"></i> Citation and reference guidance</li>
                <li><i class="fas fa-check text-success"></i> Workshops on research strategies</li>
            </ul>
        </div>

        <!-- Digital Resources -->
        <div class="col-md-4 mb-4">
            <i class="fas fa-laptop fa-3x text-primary mb-3"></i>
            <h5>Digital Resources</h5>
            <p>Access e-books, journals, and other online resources at your fingertips. Perfect for on-the-go learning.</p>
            <ul class="list-unstyled text-muted">
                <li><i class="fas fa-check text-success"></i> E-books and audiobooks</li>
                <li><i class="fas fa-check text-success"></i> Academic journal subscriptions</li>
                <li><i class="fas fa-check text-success"></i> Multimedia learning tools</li>
            </ul>
        </div>
    </div>

    <!-- Additional Services -->
    <div class="row text-center mt-5">
        <!-- Community Programs -->
        <div class="col-md-4 mb-4">
            <i class="fas fa-users fa-3x text-primary mb-3"></i>
            <h5>Community Programs</h5>
            <p>Engage with the community through book clubs, author talks, and cultural events.</p>
            <ul class="list-unstyled text-muted">
                <li><i class="fas fa-check text-success"></i> Weekly book clubs</li>
                <li><i class="fas fa-check text-success"></i> Author meet-and-greets</li>
                <li><i class="fas fa-check text-success"></i> Children's storytime sessions</li>
            </ul>
        </div>

        <!-- Study Spaces -->
        <div class="col-md-4 mb-4">
            <i class="fas fa-chair fa-3x text-primary mb-3"></i>
            <h5>Study Spaces</h5>
            <p>Enjoy comfortable and quiet areas to focus on your studies or group projects.</p>
            <ul class="list-unstyled text-muted">
                <li><i class="fas fa-check text-success"></i> Private study rooms</li>
                <li><i class="fas fa-check text-success"></i> Group collaboration spaces</li>
                <li><i class="fas fa-check text-success"></i> Free Wi-Fi and power outlets</li>
            </ul>
        </div>

        <!-- Workshops and Training -->
        <div class="col-md-4 mb-4">
            <i class="fas fa-chalkboard-teacher fa-3x text-primary mb-3"></i>
            <h5>Workshops & Training</h5>
            <p>Learn new skills and expand your knowledge through our curated workshops and training sessions.</p>
            <ul class="list-unstyled text-muted">
                <li><i class="fas fa-check text-success"></i> Creative writing classes</li>
                <li><i class="fas fa-check text-success"></i> Technology skill-building</li>
                <li><i class="fas fa-check text-success"></i> Financial literacy workshops</li>
            </ul>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="text-center mt-5">
        <p class="lead">Ready to explore all that we have to offer?</p>
        <a href="@Url.Action("Services", "Home")" class="btn btn-lg btn-primary">View All Services</a>
    </div>
</section>


<!-- Testimonials Section -->
<section class="py-5">
    <div class="container text-center">
        <h2>What Our Readers Say</h2>
        <p class="text-muted">Hear from our community of readers.</p>
        <div class="row">
            <div class="col-md-4">
                <blockquote class="blockquote">
                    <p>"The library has been my go-to place for everything from research to leisure reading. Highly recommended!"</p>
                    <footer class="blockquote-footer">Jane Doe</footer>
                </blockquote>
            </div>
            <div class="col-md-4">
                <blockquote class="blockquote">
                    <p>"Amazing collection and even better service. The librarians are always ready to help."</p>
                    <footer class="blockquote-footer">John Smith</footer>
                </blockquote>
            </div>
            <div class="col-md-4">
                <blockquote class="blockquote">
                    <p>"I love the digital resources. Accessing journals and e-books has never been easier."</p>
                    <footer class="blockquote-footer">Emily Brown</footer>
                </blockquote>
            </div>
        </div>
    </div>
</section>

<!-- Footer Section -->
<footer class="bg-dark text-white py-4">
    <div class="container text-center">
        <p>&copy; 2024 Your Library Name | All Rights Reserved</p>
        <div>
            <a href="#" class="text-white mx-2"><i class="fab fa-facebook"></i></a>
            <a href="#" class="text-white mx-2"><i class="fab fa-twitter"></i></a>
            <a href="#" class="text-white mx-2"><i class="fab fa-instagram"></i></a>
        </div>
    </div>
</footer>

